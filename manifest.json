{
  "manifest_version": 3,
  "name": "Clipboard Text Analyzer",
  "version": "1.0",
  "description": "Captures clipboard text, saves it, and provides AI-powered analysis and inspiration.",
  "permissions": ["storage", "clipboardRead"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}